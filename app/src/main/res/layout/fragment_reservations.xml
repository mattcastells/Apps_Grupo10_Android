<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="36dp" android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="@color/ritmofit_orange"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/reservationsTitle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Reservar Clase"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/ritmofit_orange"/>
        </LinearLayout>

        <TextView
            android:id="@+id/reservationsSubtitle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Seleccioná una clase y horario para reservar tu lugar."
            android:textSize="17sp"
            android:textColor="@color/ritmofit_dark"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>


        <Spinner
            android:id="@+id/classSpinner"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/ritmofit_gray"
            android:spinnerMode="dropdown"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/timeSpinner"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/ritmofit_gray"
            android:spinnerMode="dropdown"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/bookButton"
            android:layout_width="match_parent" android:layout_height="60dp"
            android:text="RESERVAR"
            android:textSize="20sp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="@color/ritmofit_orange"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="28dp" android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:tint="@color/ritmofit_dark"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:id="@+id/myReservationsTitle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Mis Reservas"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/ritmofit_dark"/>
        </LinearLayout>

        <TextView
            android:id="@+id/noReservationsText"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Aún no tenés reservas. ¡Reservá tu primera clase!"
            android:textSize="16sp"
            android:textColor="@color/ritmofit_gray"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/myReservationsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
