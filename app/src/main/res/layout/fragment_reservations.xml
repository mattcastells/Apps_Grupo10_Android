<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ritmofit_beige">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">
            <TextView
                android:id="@+id/reservationsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reservas"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/ritmofit_orange"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clase"
                android:textColor="@color/ritmofit_dark"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:letterSpacing="0.05"/>
            <Spinner
                android:id="@+id/classSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/white_rounded_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario"
                android:textColor="@color/ritmofit_dark"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:letterSpacing="0.05"/>
            <Spinner
                android:id="@+id/timeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/white_rounded_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"/>
            <LinearLayout
                android:id="@+id/classInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_rounded_border"
                android:padding="18dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="0dp">
                <!-- Aquí se llenará dinámicamente la info de la clase desde el fragment -->
            </LinearLayout>
            <Button
                android:id="@+id/bookButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="RESERVAR"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/ritmofit_orange"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:elevation="2dp"
                android:drawableLeft="@android:drawable/ic_menu_save"
                android:drawablePadding="10dp"
                android:letterSpacing="0.08"/>
            <TextView
                android:id="@+id/noReservationsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No tenés reservas"
                android:textSize="18sp"
                android:textColor="@color/ritmofit_dark"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-medium"/>
            <LinearLayout
                android:id="@+id/myReservationsContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:divider="@android:color/transparent"
                android:showDividers="middle"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>