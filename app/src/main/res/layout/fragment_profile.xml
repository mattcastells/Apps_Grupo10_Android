<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/ritmofit_beige">
    <ScrollView
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="24dp" android:gravity="center_horizontal">

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/ritmofit_orange"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/profileSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí podés ver y editar tu información personal."
            android:textSize="16sp"
            android:textColor="@color/ritmofit_dark"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="140dp" android:layout_height="140dp"
            android:src="@drawable/bodybuilder"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:contentDescription="Foto de perfil"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="0dp"/>
        <Button
            android:id="@+id/changePhotoButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Cambiar foto"
            android:textSize="17sp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/ritmofit_orange"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/editInfoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar información"
            android:textSize="17sp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/ritmofit_dark"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="2dp"/>
        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Ingresá tu nombre"
            android:textSize="18sp"
            android:backgroundTint="@color/ritmofit_gray"
            android:textColor="@color/ritmofit_dark"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/nameHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este será el nombre que verán otros usuarios."
            android:textSize="13sp"
            android:textColor="@color/ritmofit_dark"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo electrónico"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/ritmofit_dark"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"/>
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Ingresá tu email"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:backgroundTint="@color/ritmofit_gray"
            android:textColor="@color/ritmofit_dark"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/emailHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asegurate de que tu email sea válido para recibir notificaciones."
            android:textSize="13sp"
            android:textColor="@color/ritmofit_dark"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:textSize="18sp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/ritmofit_orange"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/ritmofit_dark"
            android:textColor="@color/white"/>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
