<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="24dp" android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="140dp" android:layout_height="140dp"
            android:src="@drawable/bodybuilder"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:contentDescription="Foto de perfil"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/changePhotoButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Cambiar foto"
            android:textSize="17sp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/ritmofit_orange"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Nombre" android:inputType="textPersonName"
            android:textSize="18sp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/ritmofit_gray"
            android:textColor="@color/ritmofit_dark"/>
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Email" android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/ritmofit_gray"
            android:textColor="@color/ritmofit_dark"/>
        <EditText
            android:id="@+id/roleEditText"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Rol" android:inputType="text" android:enabled="false"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/ritmofit_gray"
            android:textColor="@color/ritmofit_dark"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:textSize="18sp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/ritmofit_orange"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Cerrar sesiÃ³n"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/ritmofit_dark"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>
