<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ritmofit.app.ui.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_createUserFragment"
            app:destination="@id/createUserFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ritmofit.app.ui.home.HomeFragment"
        android:label="Home">

        <action
            android:id="@+id/action_global_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_homeFragment_to_classDetailFragment"
            app:destination="@id/classDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/scanQrFragment"
        android:name="com.ritmofit.app.ui.scanqr.ScanQrFragment"
        android:label="Escanear" />

    <fragment
        android:id="@+id/reservationsFragment"
        android:name="com.ritmofit.app.ui.reservations.ReservationsFragment"
        android:label="Reservas" />

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.ritmofit.app.ui.news.NewsFragment"
        android:label="Noticias" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ritmofit.app.ui.profile.ProfileFragment"
        android:label="Perfil" />

    <fragment
        android:id="@+id/createUserFragment"
        android:name="com.ritmofit.app.ui.createuser.CreateUserFragment"
        android:label="Crear usuario">
        <action
            android:id="@+id/action_createUserFragment_to_otpVerificationFragment"
            app:destination="@id/otpVerificationFragment" />
    </fragment>

    <fragment
        android:id="@+id/otpVerificationFragment"
        android:name="com.ritmofit.app.ui.otp.OtpVerificationFragment"
        android:label="fragment_otp_verification" >
        <action
            android:id="@+id/action_otpVerificationFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/editUserFragment"
        android:name="com.ritmofit.app.ui.edituser.EditUserFragment"
        android:label="Editar información" />

    <fragment
        android:id="@+id/classDetailFragment"
        android:name="com.ritmofit.app.ui.classdetail.ClassDetailFragment"
        android:label="Detalle de Clase">
        <!-- Nuevo argumento para integración con backend -->
        <argument
            android:name="classId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <!-- Argumentos legacy para compatibilidad hacia atrás -->
        <argument
            android:name="disciplina"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="hora"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="profesor"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="cupos"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="duracion"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="sede"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="ubicacion"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="fecha"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.ritmofit.app.ui.history.HistoryFragment"
        android:label="Historial">
        <action
            android:id="@+id/action_historyFragment_to_historyDetailFragment"
            app:destination="@id/historyDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/historyDetailFragment"
        android:name="com.ritmofit.app.ui.history.HistoryDetailFragment"
        android:label="Detalle asistencia">
        <argument
            android:name="attendanceId"
            app:argType="string" />
    </fragment>

</navigation>
